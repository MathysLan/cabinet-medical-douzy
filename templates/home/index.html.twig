{% extends 'base.html.twig' %}

{% block title %}Bienvenue au Cabinet Médical de Douzy{% endblock %}

{% block body %}
    <div class="container mt-5">
        <header class="text-center mb-4">
            <h1>Bienvenue au Cabinet Médical de Douzy</h1>
            <p>Votre santé est notre priorité.</p>
            <img src="{{ asset('images/banner.jpg') }}" alt="Bannière du cabinet médical" class="img-fluid">
        </header>

        <section class="mb-5">
            <div class="services-container">
                <a href="{{ path('app_services') }}"><h2 class="services-title">Nos Services</h2></a>
                <div class="row">
                    <div class="col-md-4 service-col">
                        <div class="card service-card">
                            <img src="{{ asset('images/service1.jpg') }}" class="card-img-top" alt="Service 1">
                            <div class="card-body">
                                <h5 class="card-title service-card-title">Médecin Généraliste</h5>
                                <p class="card-text service-card-text">Consultations générales pour toute la famille.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 service-col">
                        <div class="card service-card">
                            <img src="{{ asset('images/service2.jpg') }}" class="card-img-top" alt="Service 2">
                            <div class="card-body">
                                <h5 class="card-title service-card-title">Orthophonie</h5>
                                <p class="card-text service-card-text">Suivi et accompagnement des troubles de la communication.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 service-col">
                        <div class="card service-card">
                            <img src="{{ asset('images/service3.jpg') }}" class="card-img-top" alt="Service 3">
                            <div class="card-body">
                                <h5 class="card-title service-card-title">Psychologie</h5>
                                <p class="card-text service-card-text">Consultations pour le soutien psychologique et émotionnel.</p>
                            </div>
                        </div>
                    </div>
                    <!-- Ajoute d'autres services ici -->
                </div>
            </div>

        </section>

        <section class="mb-5">
            <h2>Dernières Actualités</h2>
            <ul class="list-unstyled">
                {% for actualite in actualites %}
                    <li>
                        <h3>{{ actualite.titre }}</h3>
                        <p>{{ actualite.contenu|slice(0, 100) ~ '...' }}</p>
                        <small>Publié le {{ actualite.datePublication|date('d/m/Y H:i') }}</small>
                        <a href="{{ path('actualites') }}" class="btn btn-secondary">Lire plus</a>
                    </li>
                {% endfor %}
            </ul>
        </section>

        <footer class="text-center mt-5">
            <h2>Contact</h2>
            <p>Pour toute demande, veuillez nous contacter au <strong>01 23 45 67 89</strong> ou par email à <strong>contact@cabinetsante.com</strong>.</p>
        </footer>
    </div>
{% endblock %}
