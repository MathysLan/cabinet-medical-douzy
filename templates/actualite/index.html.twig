{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="news-header text-center mb-4">
            <h1>Actualités</h1>
            <p>Restez à jour avec les dernières nouvelles et informations du cabinet.</p>
            <a href="{{ path('ajouter_actualite') }}" class="btn btn-primary btn-add-news">Ajouter une actualité</a>
        </div>

        <div class="news-list">
            {% for actualite in actualites %}
                <div class="news-item mb-4 p-3 shadow-sm">
                    <h2 class="news-title">{{ actualite.titre }}</h2>
                    <p class="news-content">{{ actualite.contenu }}</p>
                    <small class="text-muted">Publié le {{ actualite.datePublication|date('d/m/Y H:i') }}</small>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
