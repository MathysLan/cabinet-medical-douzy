{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Actualités</h1>
        <a href="{{ path('ajouter_actualite') }}" class="btn btn-primary">Ajouter une actualité</a>
        <ul>
            {% for actualite in actualites %}
                <li>
                    <h2>{{ actualite.titre }}</h2>
                    <p>{{ actualite.contenu }}</p>
                    <small>Publié le {{ actualite.datePublication|date('d/m/Y H:i') }}</small>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
