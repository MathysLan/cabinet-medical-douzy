{% extends 'base.html.twig' %}

{% block title %}Ajouter une Actualité{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="form-header text-center mb-4">
            <h1>Ajouter une Actualité</h1>
            <p>Remplissez le formulaire ci-dessous pour publier une nouvelle actualité.</p>
        </div>

        <div class="form-container p-4 shadow-sm bg-light rounded">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success btn-lg">Ajouter</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
